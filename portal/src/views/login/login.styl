  height: 55px;
  line-height: 55px;
  background-color: rgba(0, 0, 0, 0.4);
  text-align: center;
  color: #CED2D5;
  cursor: pointer;
}

.login-submit:hover {
  background-color: rgba(0, 0, 0, 0.75);
}

.login-submit .submit {
  color: #CED2D5;
  cursor: pointer;
}

.login-reme {
  color: #CED2D5;
}

.login-reme .el-checkbox__input.is-checked + .el-checkbox__label {
  color: #CED2D5;
}

.err-message {
  font-size: 13px;
  color: #ff0000;
  height: auto;
  min-height: 40px;
  line-height: 2 !important;
  margin-top: 8px;
}
